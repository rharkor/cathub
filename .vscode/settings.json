{
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "files.watcherExclude": {
    "**/.next": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },
  "search.exclude": {
    "**/.next": true,
    "**/node_modules/*/**": true
  },
  "editor.formatOnSave": true,
  "makefile.configureOnOpen": false,
  "tailwindCSS.experimental.classRegex": [
    [
      "cva(?:<[^>]*>)?(([^)]*))",
      "[\"'`]([^\"'`]*).*?[\"'`]",
      "(?:twMerge|twJoin)\\(([^\\);]*)[\\);]"
    ]
  ]
}
